{
    "name": "nodejs-apm-agent",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf -rf dist/*",
        "assets": "ncp src/lib/proto dist/lib/proto",
        "build-ts": "tsc",
        "tslint": "tslint --fix -c tslint.json -p tsconfig.json",
        "serve": "node dist/index.js",
        "bundle": "npm run clean && ncp src/lib/proto dist/proto && ncc build ./src/index.ts -m -o ./dist && rename -f ./dist/index.js nodejs-apm-agent.js && ncc build ./src/agent.ts -m -o ./dist && rename -f ./dist/index.js agent.js",
        "build": "npm run build-ts && npm run assets",
        "start": "npm run build && npm run serve",
        "start:dev": "npm run clean && nodemon",
        "prettier": "prettier --check '**/*.ts'",
        "validate": "npm run prettier && npm run tslint && npm run build-ts",
        "mock": "cross-env APM_AGENT_CONFIG='./agent.config.js' node -r './dist/index.js' server"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^ 16.10.3",
        "@vercel/ncc": "^0.34.0",
        "express": "^4.18.1",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.6",
        "nyc": "^15.1.0",
        "prettier": "^2.1.2",
        "rename-cli": "^6.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "tsc": "^2.0.3",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.3.0",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.6.8",
        "@grpc/proto-loader": "^0.7.0",
        "axios": "^0.27.2",
        "dayjs": "^1.11.0",
        "pidusage": "^3.0.0",
        "winston": "^3.8.1"
    },
    "nodemonConfig": {
        "ext": "ts,yaml",
        "ignore": [
            "dist",
            "node_modules"
        ],
        "exec": "npm run start"
    }
}
